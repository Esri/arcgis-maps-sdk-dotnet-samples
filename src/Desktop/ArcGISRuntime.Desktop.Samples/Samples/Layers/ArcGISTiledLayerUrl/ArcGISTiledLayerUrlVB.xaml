<UserControl 
    x:Class="ArcGISTiledLayerUrl.ArcGISTiledLayerUrlVB"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:ArcGISRuntime.Desktop.Samples"
    mc:Ignorable="d" 
    xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
    d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <esri:MapView>
            <esri:Map>
                <esri:Map.Basemap>
                    <esri:Basemap>
                        <esri:ArcGISTiledLayer Name="Topographic" 
                            Source="http://services.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer"/>
                    </esri:Basemap>
                </esri:Map.Basemap>
            </esri:Map>
        </esri:MapView>
    </Grid>
</UserControl>
