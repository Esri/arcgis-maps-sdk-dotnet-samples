<UserControl 
    x:Class="AuthorMap.AuthorMapVB"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="110"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Select a Basemap:"
                       VerticalAlignment="Top" HorizontalAlignment="Right"
                       Margin="10"/>
            <ListBox x:Name="BasemapListBox" 
                     Grid.Column="1"
                     VerticalAlignment="Top" HorizontalAlignment="Left"
                     Height="100" Width="150"
                     Margin="10"/>
            <TextBlock Text="Choose Layers:"
                       VerticalAlignment="Top" HorizontalAlignment="Right"
                       Margin="10,0"
                       Grid.Row="1"/>
            <ListBox x:Name="OperationalLayerListBox"
                     SelectionMode="Multiple"
                     Grid.Row="1" Grid.Column="1"
                     VerticalAlignment="Top" HorizontalAlignment="Left"
                     Height="50" Width="150"
                     Margin="10,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Key}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Grid.Row="2"
                       VerticalAlignment="Top" HorizontalAlignment="Right"
                       Margin="10,0"
                       Text="Initial Extent:"/>
            <StackPanel Orientation="Vertical"
                        Grid.Row="2" Grid.Column="1"
                        Margin="10,0,0,0"
                        Width="150">
                <StackPanel Orientation="Horizontal"
                            Margin="0,3">
                    <TextBlock Text="X Min:"/>
                    <TextBox x:Name="XMinTextBox" 
                             Margin="6,0"
                             Width="80"
                             IsReadOnly="True"
                             Text=""/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,3">
                    <TextBlock Text="Y Min:"/>
                    <TextBox x:Name="YMinTextBox"
                             Margin="6,0"
                             Width="80"
                             IsReadOnly="True"
                             Text=""/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,3">
                    <TextBlock Text="X Max:"/>
                    <TextBox x:Name="XMaxTextBox" 
                             Margin="5,0"
                             Width="80"
                             IsReadOnly="True"
                             Text=""/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,3">
                    <TextBlock Text="Y Max:"/>
                    <TextBox x:Name="YMaxTextBox"
                             Margin="5,0"
                             Width="80"
                             IsReadOnly="True"
                             Text=""/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Grid.Row="3" Grid.ColumnSpan="2"
                        VerticalAlignment="Top" HorizontalAlignment="Center">
                <Button Content="New Map"
                    Width="120" Height="25"
                    Margin="10,0"
                    Click="ClearMap"/>
                <Button Content="Update Map"
                    Width="120" Height="25"
                    Click="UpdateMap"/>
            </StackPanel>
            <TextBlock Grid.Row="4"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       Text="Title:"/>
            <TextBox x:Name="TitleTextBox" 
                     Grid.Row="4" Grid.Column="1"
                     VerticalAlignment="Bottom" HorizontalAlignment="Left"
                     Width="150"
                     Margin="10,0"
                     Text="My Map"/>
            <TextBlock Grid.Row="5"
                       VerticalAlignment="Top" HorizontalAlignment="Right"
                       Margin="0,10"
                       Text="Description:"/>
            <TextBox x:Name="DescriptionTextBox" 
                     Grid.Row="5" Grid.Column="1"
                     VerticalAlignment="Top" HorizontalAlignment="Left"
                     Width="150" Height="50"
                     Margin="10"
                     TextWrapping="Wrap"
                     Text="Authored and saved using ArcGIS Runtime SDK."/>
            <TextBlock Grid.Row="6"
                       VerticalAlignment="Top" HorizontalAlignment="Right"
                       Text="Tags:"/>
            <TextBox x:Name="TagsTextBox" 
                     Grid.Row="6" Grid.Column="1"
                     VerticalAlignment="Top" HorizontalAlignment="Left"
                     Width="150"
                     Margin="10,0"
                     Text="ArcGIS Runtime, Sample"/>
            <Button Grid.Row="7" Grid.ColumnSpan="2" IsEnabled="{Binding ElementName=MyMapView }"
                    Content="Save Map to Portal"
                    Width="170" Height="25"
                    Margin="10,0"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Click="SaveMap"/>
            <ProgressBar x:Name="SaveProgressBar" 
                         Grid.Row="8" Grid.ColumnSpan="2"
                         Height="15"
                         IsIndeterminate="True" 
                         Visibility="Hidden"/>
        </Grid>
        <esri:MapView x:Name="MyMapView"
                      Grid.Column="1"/>
    </Grid>
</UserControl>
