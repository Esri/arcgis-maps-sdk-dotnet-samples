<ContentPage
    x:Class="ArcGISRuntimeXamarin.Samples.DisplayScenesInTabletopAR.DisplayScenesInTabletopAR"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:esriARToolkit="clr-namespace:Esri.ArcGISRuntime.ARToolkit.Forms;assembly=Esri.ArcGISRuntime.ARToolkit.Forms">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentView Grid.Row="0" Grid.RowSpan="2">
            <esriARToolkit:ARSceneView x:Name="MyARSceneView" RenderPlanes="True" />
        </ContentView>
        <Label
            x:Name="HelpLabel"
            Grid.Row="0"
            BackgroundColor="#88000000"
            HorizontalOptions="FillAndExpand"
            Text="Keep moving your device until a plane is found."
            TextColor="White" />
    </Grid>
</ContentPage>
