<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGISRuntime.Samples.ExportTiles.ExportTiles"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Xamarin.Forms;assembly=Esri.ArcGISRuntime.Xamarin.Forms">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" BackgroundColor="MediumVioletRed">
            <esriUI:MapView x:Name="MyMapView" IsVisible="True" />
        </Grid>
        <Grid Grid.Row="1" Margin="5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="MyProgressBar"
                         Grid.Column="0"
                         HeightRequest="30"
                         HorizontalOptions="Start"
                         IsVisible="False"
                         WidthRequest="320" />
            <Label x:Name="MyProgressBarLabel"
                   Grid.Column="1"
                   HorizontalOptions="Center"
                   IsVisible="False"
                   VerticalOptions="Center" />
        </Grid>
        <Button x:Name="MyCancelJobButton"
                Grid.Row="2"
                Clicked="MyCancelJobButton_Clicked"
                IsVisible="False"
                Text="Cancel" />
        <Button x:Name="MyExportPreviewButton"
                Grid.Row="2"
                Clicked="MyExportPreviewButton_Clicked"
                IsEnabled="False"
                Text="Export" />
    </Grid>
</ContentPage>