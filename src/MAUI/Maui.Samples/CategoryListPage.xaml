<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGIS.CategoryListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="SettingsClicked"
                     IconImageSource="{AppThemeBinding Light=settings.png,
                                                       Dark=settingsdark.png}"
                     Text="Settings" />
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <SearchBar Grid.Row="0" Text="{Binding Path=SearchQuery}" />
        <ListView x:Name="SampleCategoriesList"
                  Grid.Row="1"
                  IsVisible="{Binding Path=IsCategoriesOpen}"
                  ItemTapped="OnItemTapped"
                  ItemsSource="{Binding Path=SampleCategories}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" TextColor="{AppThemeBinding Light=Black, Dark=LightGray}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:Name="SampleSearchResultList"
                  Grid.Row="1"
                  IsVisible="{Binding Path=IsSearchOpen}"
                  ItemTapped="OnItemTapped"
                  ItemsSource="{Binding Path=SearchResults}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding SampleName}" TextColor="{AppThemeBinding Light=Black, Dark=LightGray}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>