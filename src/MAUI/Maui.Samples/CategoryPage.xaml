<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ArcGIS.CategoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Controls"
    xmlns:converters="clr-namespace:ArcGIS.Converters">

    <Shell.TitleView>
        <Grid
            BackgroundColor="pink"
            ColumnDefinitions="0.4*,0.2*,0.4*"
            HorizontalOptions="FillAndExpand">
            <Label
                x:Name="PageTitle"
                Grid.Column="1"
                BackgroundColor="green"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}"
                VerticalOptions="Center"
                WidthRequest="200" />
        </Grid>
    </Shell.TitleView>

    <Shell.SearchHandler>
        <controls:SampleSearchHandler Placeholder="Enter search term" ShowsResults="True">
            <controls:SampleSearchHandler.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Label Text="{Binding SampleName}" VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </controls:SampleSearchHandler.ItemTemplate>
        </controls:SampleSearchHandler>
    </Shell.SearchHandler>

    <ContentPage.Resources>
        <converters:SampleToBitmapConverter x:Key="SampleToBitmapConverter" />
    </ContentPage.Resources>
    <Grid x:Name="SampleListGrid">
        <ScrollView x:Name="SampleScrollView" HorizontalOptions="Center">
            <FlexLayout
                AlignContent="Start"
                AlignItems="Start"
                BackgroundColor="Transparent"
                BindableLayout.ItemsSource="{Binding .}"
                JustifyContent="SpaceEvenly"
                Wrap="Wrap">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="SampleGrid">
                            <Border
                                Margin="5"
                                StrokeThickness="0"
                                WidthRequest="300">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="TapGestureRecognizer_SampleTapped" />
                                </Border.GestureRecognizers>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="45" />
                                    </Grid.RowDefinitions>
                                    <Image
                                        Grid.Row="0"
                                        Source="{Binding SampleImageName, Converter={StaticResource SampleToBitmapConverter}}"
                                        WidthRequest="300" />
                                    <Label
                                        Grid.Row="0"
                                        Padding="10"
                                        Background="#A52F2F2F"
                                        FontSize="18"
                                        HeightRequest="50"
                                        Text="{Binding SampleName}"
                                        VerticalOptions="End"
                                        VerticalTextAlignment="Center" />
                                    <Label
                                        Grid.Row="1"
                                        Margin="5"
                                        FontSize="13"
                                        Text="{Binding Description}"
                                        TextColor="{AppThemeBinding Dark=LightGray,
                                                                    Light=Black}"
                                        VerticalTextAlignment="Start" />
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </ScrollView>
    </Grid>
</ContentPage>