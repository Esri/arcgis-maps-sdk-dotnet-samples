<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage x:Class="ArcGISRuntimeMaui.SamplePage"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            xmlns:cmp="clr-namespace:Microsoft.Maui.Controls.Compatibility;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.IsSwipePagingEnabled="false">
    <TabbedPage.Children>
        <ContentPage x:Name="SampleContentPage"
                     Title="Sample"
                     Padding="0"
                     IconImageSource="maps.png" />
        <ContentPage x:Name="SampleDetailPage"
                     Title="Info"
                     IconImageSource="description.png">
            <WebView x:Name="DescriptionView" />
        </ContentPage>
        <ContentPage x:Name="SourceCodePage"
                     Title="Source code"
                     IconImageSource="documentation.png">
            <WebView x:Name="SourceCodeView" />
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>