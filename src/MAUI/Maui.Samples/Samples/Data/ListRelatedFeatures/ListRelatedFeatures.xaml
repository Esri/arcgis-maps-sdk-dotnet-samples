<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGIS.Samples.ListRelatedFeatures.ListRelatedFeatures"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid Style="{DynamicResource EsriSampleContainer}">
        <esriUI:MapView x:Name="MyMapView" Style="{DynamicResource EsriSampleGeoView}" />
        <Border MaximumHeightRequest="{OnPlatform Android=150, iOS=150, WinUI=-1}" Style="{DynamicResource EsriSampleControlPanel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label x:Name="Status"
                       Grid.Row="0"
                       Margin="5"
                       HorizontalOptions="FillAndExpand"
                       Text="Tap a park (green) to see related features." />
                <ListView x:Name="MyResultsView" Grid.Row="1" />
            </Grid>
        </Border>
    </Grid>
</ContentPage>