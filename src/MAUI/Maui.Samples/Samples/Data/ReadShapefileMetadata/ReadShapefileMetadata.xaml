<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGIS.Samples.ReadShapefileMetadata.ReadShapefileMetadata"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*, Auto">
        <esriUI:MapView x:Name="MyMapView" Style="{DynamicResource EsriSampleGeoView}" />
        <Border Style="{DynamicResource EsriSampleControlPanel}">
            <ScrollView>
                <StackLayout x:Name="InfoList" Spacing="5">
                    <Label FontAttributes="Bold"
                           FontSize="Medium"
                           Text="{Binding Path=Credits}" />
                    <Label LineBreakMode="WordWrap" Text="{Binding Summary}" />
                    <Image x:Name="ShapefileThumbnailImage" Margin="10" />
                    <Label Margin="0,3"
                           FontAttributes="Bold"
                           Text="Tags:" />
                    <ListView ItemsSource="{Binding Tags}"
                              RowHeight="25"
                              VerticalScrollBarVisibility="Never" />
                </StackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>