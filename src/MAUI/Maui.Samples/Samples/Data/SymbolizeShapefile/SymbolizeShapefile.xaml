<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGISRuntime.Samples.SymbolizeShapefile.SymbolizeShapefile"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <esriUI:MapView x:Name="MyMapView" Grid.Row="1" />
        <Frame Grid.Row="{OnIdiom Phone=0,
                                  Desktop=1,
                                  Tablet=1}"
               HeightRequest="{OnIdiom Default=-1,
                                       Desktop=80,
                                       Tablet=-1}"
               Style="{StaticResource EsriSampleFrameStyle}">
            <Grid>
                <Button x:Name="MyRendererButton"
                        Clicked="Button_Clicked"
                        IsEnabled="False"
                        Text="Change Renderer" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>