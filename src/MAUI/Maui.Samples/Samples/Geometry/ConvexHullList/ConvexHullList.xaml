<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGISRuntime.Samples.ConvexHullList.ConvexHullList"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid RowDefinitions="auto,*">
        <esriUI:MapView x:Name="MyMapView" Grid.Row="1" />
        <Frame Grid.Row="{OnIdiom Phone=0, Desktop=1, Tablet=1}" Style="{StaticResource EsriSampleFrameStyle}">
            <Grid RowDefinitions="40,40,40" RowSpacing="5">
                <StackLayout Grid.Row="0"
                             Orientation="Horizontal"
                             Spacing="5">
                    <Label Text="Union: " VerticalTextAlignment="Center" />
                    <Switch x:Name="ConvexHullListSwitch" IsToggled="True" />
                </StackLayout>
                <Button x:Name="ConvexHullListButton"
                        Grid.Row="1"
                        Clicked="ConvexHullListButton_Clicked"
                        Text="Convex Hull" />
                <Button x:Name="ResetButton"
                        Grid.Row="2"
                        Clicked="ResetButton_Clicked"
                        Text="Reset" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>