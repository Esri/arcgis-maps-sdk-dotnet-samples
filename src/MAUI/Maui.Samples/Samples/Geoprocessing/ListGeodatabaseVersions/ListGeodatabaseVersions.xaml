<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGIS.Samples.ListGeodatabaseVersions.ListGeodatabaseVersions"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Margin="10,0,0,0" Text="Current versions:" />
            </StackLayout>
        </StackLayout>
        <ActivityIndicator x:Name="MyActivityIndicator"
                           Grid.Row="1"
                           HorizontalOptions="Center"
                           IsVisible="False"
                           VerticalOptions="Center" />
        <ScrollView Grid.Row="1">
            <Label x:Name="VersionsLabel" Margin="10,0,0,0" />
        </ScrollView>
    </Grid>
</ContentPage>