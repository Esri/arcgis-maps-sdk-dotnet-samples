<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGISRuntime.Samples.SurfacePlacements.SurfacePlacements"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <esriUI:SceneView x:Name="MySceneView" Grid.Row="1" />
        <Frame Grid.Row="{OnIdiom Phone=0, Desktop=1, Tablet=1}" Style="{StaticResource EsriSampleFrameStyle}">
            <Grid RowDefinitions="auto,auto,auto,auto" RowSpacing="5">
                <Button x:Name="BillboardedButton"
                        Grid.Row="0"
                        Clicked="BillboardedClicked"
                        IsEnabled="False"
                        Text="Draped Billboarded" />
                <Button x:Name="FlatButton"
                        Grid.Row="1"
                        Clicked="FlatClicked"
                        Text="Draped Flat" />
                <Slider x:Name="ZSlider"
                        Grid.Row="2"
                        Maximum="140"
                        Minimum="0"
                        ValueChanged="ZSlider_ValueChanged"
                        Value="70" />
                <Label x:Name="ValueLabel"
                       Grid.Row="3"
                       Text="Z Value: 70 meters" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>