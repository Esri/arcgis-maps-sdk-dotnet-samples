<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGIS.Samples.SurfacePlacements.SurfacePlacements"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui"
             xmlns:foldable="clr-namespace:Microsoft.Maui.Controls.Foldable;assembly=Microsoft.Maui.Controls.Foldable">

    <foldable:TwoPaneView MinWideModeWidth="{OnIdiom Phone=400, Default=99999}"
                          Pane1Length="auto"
                          Pane2Length="*">

        <foldable:TwoPaneView.Pane1>
            <Border Style="{DynamicResource EsriSampleBorder}">
                <FlexLayout Wrap="Wrap">
                    <Button x:Name="BillboardedButton"
                            Margin="5,5,5,5"
                            Clicked="BillboardedClicked"
                            IsEnabled="False"
                            MinimumWidthRequest="200"
                            Text="Draped Billboarded" />
                    <Button x:Name="FlatButton"
                            Margin="5,5,5,5"
                            Clicked="FlatClicked"
                            MinimumWidthRequest="200"
                            Text="Draped Flat" />
                    <Slider x:Name="ZSlider"
                            Margin="5,5,5,5"
                            Maximum="140"
                            WidthRequest="200"
                            Minimum="0"
                            MinimumWidthRequest="200"
                            ValueChanged="ZSlider_ValueChanged"
                            Value="70" />
                    <Label x:Name="ValueLabel"
                           Margin="5,5,5,5"
                           Text="Z Value: 70 meters" />
                </FlexLayout>
            </Border>
        </foldable:TwoPaneView.Pane1>

        <foldable:TwoPaneView.Pane2>
            <esriUI:SceneView x:Name="MySceneView" Style="{DynamicResource EsriSampleGeoView}" />
        </foldable:TwoPaneView.Pane2>

    </foldable:TwoPaneView>
</ContentPage>