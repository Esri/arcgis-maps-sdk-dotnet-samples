<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGIS.Samples.ApplyRenderersToSceneLayer.ApplyRenderersToSceneLayer"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid Style="{DynamicResource EsriSampleContainer}">
        <esriUI:SceneView x:Name="MySceneView" Style="{DynamicResource EsriSampleGeoView}" />
        <Border Style="{DynamicResource EsriSampleControlPanel}">
            <Grid Padding="5"
                  ColumnDefinitions="auto,auto"
                  ColumnSpacing="5"
                  RowDefinitions="auto">
                <Label Grid.Column="0"
                       Text="Select Renderer: "
                       VerticalTextAlignment="Center" />
                <Picker x:Name="RendererPicker"
                        Grid.Column="1"
                        MinimumWidthRequest="200"
                        SelectedIndexChanged="RendererPicker_SelectionChanged" />
            </Grid>
        </Border>
    </Grid>
</ContentPage>