<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ArcGIS.Samples.ConfigureElectronicNavigationalCharts.ConfigureElectronicNavigationalCharts"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid Style="{DynamicResource EsriSampleContainer}">
        <esriUI:MapView
            x:Name="MyMapView"
            GeoViewTapped="MyMapView_GeoViewTapped"
            Style="{DynamicResource EsriSampleGeoView}" />
        <Border Style="{DynamicResource EsriSampleControlPanel}">
            <StackLayout Padding="5,5,5,10" Spacing="5">
                <Label FontAttributes="Bold" Text="Tap on the map to select Enc features. Use the controls to adjust Enc mariner display settings." />
                <Grid
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="5"
                    RowDefinitions="Auto,Auto,Auto"
                    RowSpacing="5">
                    <Label Text="Color Scheme" VerticalOptions="Center" />
                    <Picker x:Name="ColorSchemePicker" Grid.Column="1" />
                    <Label
                        Grid.Row="1"
                        Text="Area Symbolization Type"
                        VerticalOptions="Center" />
                    <Picker
                        x:Name="AreaPicker"
                        Grid.Row="1"
                        Grid.Column="1" />
                    <Label
                        Grid.Row="2"
                        Text="Point Symbolization Type"
                        VerticalOptions="Center" />
                    <Picker
                        x:Name="PointPicker"
                        Grid.Row="2"
                        Grid.Column="1" />
                </Grid>
                <Button Clicked="Button_Clicked" Text="Apply" />
            </StackLayout>
        </Border>
    </Grid>
</ContentPage>