<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGISMaui.Samples.FeatureLayerDefinitionExpression.FeatureLayerDefinitionExpression"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui"
             xmlns:resources="clr-namespace:ArcGIS.Resources">
    <Grid Style="{DynamicResource EsriSampleContainer}">
        <esriUI:MapView x:Name="MyMapView"
                        DrawStatusChanged="MapDrawStatusChanged"
                        Style="{DynamicResource EsriSampleGeoView}" />
        <Border Style="{DynamicResource EsriSampleControlPanel}">
            <StackLayout Orientation="Vertical">
                <Label x:Name="IncidentReportSummary" Text="Current feature count:" />
                <StackLayout Orientation="Horizontal">
                    <Button Margin="5"
                            Clicked="Expression_Click"
                            Text="Expression" />
                    <Button Margin="5"
                            Clicked="Filter_Click"
                            Text="Filter" />
                    <Button Margin="5"
                            Clicked="Reset_Click"
                            Text="Reset" />
                </StackLayout>
            </StackLayout>
        </Border>
    </Grid>
</ContentPage>