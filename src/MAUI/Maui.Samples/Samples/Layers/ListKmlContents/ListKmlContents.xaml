<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGIS.Samples.ListKmlContents.ListKmlContents"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ArcGIS.Samples.ListKmlContents"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid Style="{DynamicResource EsriSampleContainer}">
        <esriUI:SceneView x:Name="MySceneView" Style="{DynamicResource EsriSampleGeoView}" />
        <Border Style="{DynamicResource EsriSampleControlPanel}">
            <Grid Padding="5"
                  RowDefinitions="auto,150"
                  RowSpacing="5">
                <Label Grid.Row="0"
                       HorizontalTextAlignment="Center"
                       Text="Tap to zoom to KML content." />
                <CollectionView  x:Name="LayerTreeView"
                          Grid.Row="1"
                          SelectionMode="Single"
                          SelectionChanged="LayerTreeView_SelectionChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:LayerDisplayVM">
                            <Label Text="{Binding Name}" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>