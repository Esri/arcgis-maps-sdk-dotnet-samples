<ContentPage x:Class="ArcGISRuntime.Samples.ShowLocationHistory.ShowLocationHistory"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid RowDefinitions="auto,*" Style="{DynamicResource EsriSampleContainer}">
        <esriUI:MapView x:Name="MyMapView"
                        Grid.Row="1"
                        Style="{DynamicResource EsriSampleGeoView}" />
        <Border Style="{StaticResource EsriSampleControlPanel}">
            <Grid RowDefinitions="auto">
                <Button x:Name="LocationTrackingButton"
                        Grid.Row="0"
                        Clicked="StartTracking_Tapped"
                        IsEnabled="False"
                        Text="Start tracking" />
            </Grid>
        </Border>
    </Grid>
</ContentPage>