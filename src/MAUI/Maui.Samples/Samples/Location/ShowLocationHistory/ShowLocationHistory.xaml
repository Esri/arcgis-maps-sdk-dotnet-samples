<ContentPage x:Class="ArcGISRuntime.Samples.ShowLocationHistory.ShowLocationHistory"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid RowDefinitions="auto,*">
        <esriUI:MapView x:Name="MyMapView" Grid.Row="1" />
        <Frame Grid.Row="{OnIdiom Phone=0, Desktop=1, Tablet=1}" Style="{StaticResource EsriSampleFrameStyle}">
            <Grid RowDefinitions="auto">
                <Button x:Name="LocationTrackingButton"
                        Grid.Row="0"
                        Clicked="StartTracking_Tapped"
                        IsEnabled="False"
                        Text="Start tracking" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>