<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGIS.Samples.SetSpatialReference.SetSpatialReference"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid Style="{DynamicResource EsriSampleContainer}">
        <esriUI:MapView x:Name="MyMapView" Style="{DynamicResource EsriSampleGeoView}" />
        <Border Style="{DynamicResource EsriSampleControlPanel}">
            <VerticalStackLayout Spacing="10">
                <Label 
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   Text="Set spatial reference:" />
                <Picker x:Name="SpatialReferencePicker"
                    WidthRequest="250"
                    VerticalOptions="Center"
                    TextColor="Black"
                    SelectedIndexChanged="SpatialReferencePicker_SelectedIndexChanged" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>