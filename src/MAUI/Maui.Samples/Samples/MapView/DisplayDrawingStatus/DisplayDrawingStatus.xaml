<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGISRuntime.Samples.DisplayDrawingStatus.DisplayDrawingStatus"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid Style="{DynamicResource EsriSampleContainer}">
        <esriUI:MapView x:Name="MyMapView"
                        Style="{DynamicResource EsriSampleGeoView}"
                        ViewInsets="0" />
        <ActivityIndicator x:Name="MyActivityIndicator"
                           Grid.Row="1"
                           WidthRequest="{OnIdiom Default=-1,
                                                  Phone=100}"
                           Color="Black" />
        <Border Style="{DynamicResource EsriSampleControlPanel}">
            <Grid RowDefinitions="auto">
                <Label Text="Pan and zoom to see drawing status changes." />
            </Grid>
        </Border>
    </Grid>
</ContentPage>