<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGISRuntime.Samples.ShowMagnifier.ShowMagnifier"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid RowDefinitions="auto,*">
        <esriUI:MapView x:Name="MyMapView" Grid.Row="1" />
        <Frame Grid.Row="{OnIdiom Phone=0,
                                  Desktop=1,
                                  Tablet=1}"
               Style="{StaticResource EsriSampleFrameStyle}"
               WidthRequest="{OnIdiom Default=-1,
                                      Desktop=300}">
            <Grid RowDefinitions="auto">
                <Label Text="Tap and hold to show the magnifier. Note: this only works on touchscreen devices." VerticalOptions="Start" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>