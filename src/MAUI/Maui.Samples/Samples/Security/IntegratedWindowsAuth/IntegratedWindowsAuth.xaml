<ContentPage x:Class="ArcGIS.Samples.IntegratedWindowsAuth.IntegratedWindowsAuth"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <Grid Style="{DynamicResource EsriSampleContainer}">
        <esriUI:MapView x:Name="MyMapView" Style="{DynamicResource EsriSampleGeoView}" />
        <Border Style="{DynamicResource EsriSampleControlPanel}" MaximumWidthRequest="275" >
            <StackLayout>
                <Label x:Name="InstructionLabel" Text="Enter the URL to your secured portal:" />
                <Entry x:Name="SecurePortalUrlEntry" />
                <Button x:Name="SearchSecureMapsButton"
                        Clicked="SearchSecureMapsButtonClick"
                        Text="Search IWA secured maps" />
                <Label x:Name="MessagesLabel"
                       Text="Using default system credentials."
                       LineBreakMode="WordWrap"/>
                <Picker x:Name="MapPicker"
                        Title="Select a map"
                        IsVisible="False"
                        SelectedIndexChanged="PickerSelectedIndexChanged" />
            </StackLayout>
        </Border>
    </Grid>
</ContentPage>
