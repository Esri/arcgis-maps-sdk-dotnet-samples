<ContentPage x:Class="ArcGISRuntimeMaui.WaitPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <Frame BorderColor="Transparent"
               CornerRadius="0"
               HasShadow="False"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="{OnIdiom Default=-1,
                                      Desktop=500}">
            <Grid Padding="10" RowDefinitions="auto,auto,auto">
                <Label x:Name="DownloadLabel"
                       Grid.Row="0"
                       Margin="5"
                       FontSize="Large"
                       HorizontalTextAlignment="Start"
                       Text="Checking for sample data" />
                <ProgressBar x:Name="DownloadProgress"
                             Grid.Row="1"
                             Margin="5"
                             HeightRequest="10" />
                <ActivityIndicator x:Name="IndefiniteSpinner"
                                   Grid.Row="1"
                                   Margin="5"
                                   IsRunning="true"
                                   IsVisible="false" />
                <Button Grid.Row="2"
                        Clicked="DownloadCancelled"
                        Text="Cancel" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>