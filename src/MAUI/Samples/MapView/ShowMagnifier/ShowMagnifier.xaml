<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ArcGISRuntime.Samples.ShowMagnifier.ShowMagnifier"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esriUI="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui">
    <StackLayout Orientation="Vertical">
        <Label Text="Tap and hold to show the magnifier. Note: this only works on touchscreen devices." VerticalOptions="Start" />
        <esriUI:MapView x:Name="MyMapView" VerticalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>