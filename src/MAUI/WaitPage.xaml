<ContentPage x:Class="ArcGISRuntimeMaui.WaitPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cmp="clr-namespace:Microsoft.Maui.Controls.Compatibility;assembly=Microsoft.Maui.Controls">
    <cmp:RelativeLayout>
        <Frame cmp:RelativeLayout.HeightConstraint="{cmp:ConstraintExpression Type=RelativeToParent,
                                                                              Factor=.5,
                                                                              Property=Height}"
               cmp:RelativeLayout.WidthConstraint="{cmp:ConstraintExpression Type=RelativeToParent,
                                                                             Factor=1,
                                                                             Property=Width}"
               cmp:RelativeLayout.XConstraint="{cmp:ConstraintExpression Type=RelativeToParent,
                                                                         Factor=0,
                                                                         Property=Width}"
               cmp:RelativeLayout.YConstraint="{cmp:ConstraintExpression Type=RelativeToParent,
                                                                         Factor=.5,
                                                                         Property=Height}"
               CornerRadius="0"
               HasShadow="False">
            <StackLayout>
                <Label x:Name="DownloadLabel"
                       Margin="5"
                       FontSize="Large"
                       HorizontalTextAlignment="Start"
                       Text="Checking for sample data" />
                <ProgressBar x:Name="DownloadProgress" />
                <ActivityIndicator x:Name="IndefiniteSpinner"
                                   Margin="5"
                                   IsRunning="true"
                                   IsVisible="false" />
                <Button Clicked="DownloadCancelled" Text="Cancel" />
            </StackLayout>
        </Frame>
    </cmp:RelativeLayout>
</ContentPage>