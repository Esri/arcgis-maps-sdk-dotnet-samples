<UserControl
    x:Class="ArcGIS.UWP.Samples.ShowMagnifier.ShowMagnifier"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esriControls="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriControls:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
            <TextBlock Text="Tap and hold to show the magnifier. Note: This only works on touchscreen devices."
                       TextAlignment="Left" TextWrapping="Wrap"
                       FontWeight="SemiBold" />
        </Border>
    </Grid>
</UserControl>