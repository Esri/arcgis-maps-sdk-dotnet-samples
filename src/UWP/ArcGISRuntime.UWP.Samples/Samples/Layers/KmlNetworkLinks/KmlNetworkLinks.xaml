<UserControl
    x:Class="ArcGISRuntime.UWP.Samples.KmlNetworkLinks.KmlNetworkLinks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls"
    xmlns:esriMapping="using:Esri.ArcGISRuntime.Mapping" >
    <Grid>
        <esriUI:MapView x:Name="MyMapView">
            <esriMapping:Map x:Name="MyMap" />
        </esriUI:MapView>
        <Border Margin="30" Padding="10" 
                BorderThickness="1" Background="White"
                Width="500"
                MinHeight="10" HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBlock x:Name="MyNetworkLinkTextBlock" />
        </Border>
    </Grid>
</UserControl>