<Application
    x:Class="ArcGISRuntime.UWP.Viewer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:ArcGISRuntime.UWP.Viewer.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml" />
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            <converters:SampleToBitmapConverter x:Key="sampleToBitmapConverter" />

            <SolidColorBrush x:Name="PrimaryColor" Color="#005e95"></SolidColorBrush>
            <SolidColorBrush x:Name="PrimaryDarkModeColor" Color="#FF8DD5FF"></SolidColorBrush>
            <SolidColorBrush x:Name="SecondaryColor" Color="#0079C1"></SolidColorBrush>
            <SolidColorBrush x:Name="SecondaryBackgroundColor" Color="#FFD3CFCF"></SolidColorBrush>
            <SolidColorBrush x:Name="SecondaryTextColor" Color="#595959"></SolidColorBrush>
            <SolidColorBrush x:Name="OverlayColor" Color="#8C000000"></SolidColorBrush>
            <SolidColorBrush x:Name="PrimaryTextColor" Color="#323232"></SolidColorBrush>
            <SolidColorBrush x:Name="DarkModeTextColor" Color="White"></SolidColorBrush>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <ImageBrush x:Key="HeaderBrush" ImageSource="Assets/banner-background-black.png" Stretch="UniformToFill" />
                    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FF4B4B4B"></SolidColorBrush>
                    <SolidColorBrush x:Key="InlineCodeColor" Color="White"></SolidColorBrush>
                    <Style x:Key="PrimaryTextBlock" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource DarkModeTextColor}" />
                    </Style>
                    <Style x:Key="HeaderTextBlock" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryDarkModeColor}" />
                    </Style>
                    <Style x:Key="SecondaryTextBlock" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource DarkModeTextColor}" />
                    </Style>
                    <Style x:Key="EllipseStyle" TargetType="Ellipse">
                        <Setter Property="Stroke" Value="{StaticResource PrimaryDarkModeColor}" />
                    </Style>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <ImageBrush x:Key="HeaderBrush" ImageSource="Assets/banner-background-blue.png" Stretch="UniformToFill" />
                    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#f8f8f8"></SolidColorBrush>
                    <SolidColorBrush x:Key="InlineCodeColor" Color="Black"></SolidColorBrush>
                    <Style x:Key="PrimaryTextBlock" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}" />
                    </Style>
                    <Style x:Key="HeaderTextBlock" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}" />
                    </Style>
                    <Style x:Key="SecondaryTextBlock" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}" />
                    </Style>
                    <Style x:Key="EllipseStyle" TargetType="Ellipse">
                        <Setter Property="Stroke" Value="{StaticResource PrimaryColor}" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>