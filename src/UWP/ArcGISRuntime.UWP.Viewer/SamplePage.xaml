<Page
    x:Class="ArcGISRuntime.UWP.Viewer.SamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" xmlns:local="using:ArcGISRuntime.UWP.Viewer" xmlns:tabControls="using:Microsoft.UI.Xaml.Controls">
    
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="SampleNameText"
            Grid.Row="0" Grid.Column="0"
            Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"
            FontSize="20" FontWeight="Bold"
            Text="{Binding SampleName}" />

        <tabControls:TabView x:Name="Tabs"
            Grid.Row="0" Grid.Column="1"
            HorizontalAlignment="Right"
            TabWidthMode="SizeToContent"
            SelectionChanged="TabChanged">
            <tabControls:TabViewItem
                FontSize="20" Header="Live Sample" />
            <tabControls:TabViewItem
                FontSize="20" Header="Description" />
            <tabControls:TabViewItem
                FontSize="20" Header="Source Code" />
        </tabControls:TabView>

        <Grid x:Name="ContentArea"
            Grid.Row="2" Grid.ColumnSpan="2">

            <Grid x:Name="SampleGrid"
                Margin="0"
                Background="White">
                <ContentControl x:Name="SampleContainer"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                    RequestedTheme="Light" />
            </Grid>

            <ScrollViewer x:Name="DescriptionContainer"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                Background="Transparent" Visibility="Collapsed">
                <controls:MarkdownTextBlock x:Name="DescriptionBlock"
                    Margin="5"
                    ImageResolving="MarkDownBlock_ImageResolving" InlineCodeFontFamily="Consolas"
                    InlineCodeForeground="{StaticResource InlineCodeColor}"
                    InlineCodeMargin="0" InlineCodePadding="0" LinkClicked="MarkdownText_LinkClicked" />
            </ScrollViewer>

            <local:SourceCode x:Name="SourceCodeContainer"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                Visibility="Collapsed" />
        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!--
                    ============================
                    Handle screen less than an amount of pixels
                    ============================
                -->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SampleNameText.(Grid.ColumnSpan)" Value="2" />
                        <Setter Target="Tabs.(Grid.ColumnSpan)" Value="2" />
                        <Setter Target="Tabs.(Grid.Row)" Value="1" />
                    </VisualState.Setters>
                </VisualState>
                <!--
                    ============================
                    Handle screen more than an amount of pixels
                    ============================
                -->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="840" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SampleNameText.(Grid.ColumnSpan)" Value="1" />
                        <Setter Target="Tabs.(Grid.Row)" Value="0" />
                        <Setter Target="Tabs.(Grid.ColumnSpan)" Value="1" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>