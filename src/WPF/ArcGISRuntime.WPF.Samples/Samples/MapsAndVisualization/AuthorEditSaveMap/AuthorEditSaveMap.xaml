<UserControl x:Class="ArcGISRuntime.WPF.Samples.AuthorEditSaveMap.AuthorEditSaveMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ArcGISRuntime.WPF.Samples.AuthorEditSaveMap"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <UserControl.Resources>
        <local:MapViewModel x:Key="MapViewModel" />
    </UserControl.Resources>    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Basemap:"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="10"/>
            <ListBox x:Name="BasemapListBox" 
                Grid.Column="1"
                ItemsSource="{Binding BasemapChoices, Source={StaticResource MapViewModel}}"
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Height="120" Width="190"
                Margin="10"/>
            <TextBlock Grid.Row="1"
                VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Text="Title:"/>
            <TextBox x:Name="TitleTextBox" 
                Grid.Row="1" Grid.Column="1"
                VerticalAlignment="Bottom" HorizontalAlignment="Left"
                Width="190"
                Margin="10,0"
                Text="My Map"/>
            <TextBlock Grid.Row="2"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="0,10"
                Text="Description:"/>
            <TextBox x:Name="DescriptionTextBox" 
                Grid.Row="2" Grid.Column="1"
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Width="190" Height="50"
                Margin="10"
                TextWrapping="Wrap"
                Text="Authored and saved using ArcGIS Runtime SDK."/>
            <TextBlock Grid.Row="3"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Text="Tags:"/>
            <TextBox x:Name="TagsTextBox" 
                Grid.Row="3" Grid.Column="1"
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Width="190"
                Margin="10,0"
                Text="ArcGIS Runtime, Tutorial"/>
            <Button x:Name="SaveMapButton"
                Grid.Row="4" Grid.ColumnSpan="2"
                Content="Save Map to Portal"
                Width="170" Height="25"
                Margin="10,0"
                VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="NewMapButton"
                Grid.Row="5" Grid.ColumnSpan="2"
                Content="New Map"
                Width="170" Height="25"
                Margin="10,0"
                VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <esri:MapView x:Name="MyMapView" Map="{Binding Map, Source={StaticResource MapViewModel}}" Grid.Column="1"/>
    </Grid>
</UserControl>
