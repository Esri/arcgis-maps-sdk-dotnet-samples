<Window x:Class="ArcGISRuntime.Samples.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ArcGISRuntime.Controls"
        xmlns:local="clr-namespace:ArcGISRuntime.WPF.Viewer"
        xmlns:converters="clr-namespace:ArcGISRuntime.WPF.Viewer.Converters"
        Title="ArcGIS Runtime for .NET Samples"
        Icon="Assets/ApplicationIcons/windows-desktop-256.ico"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <Window.Resources>
        <converters:SampleToBitmapConverter x:Key="SampleToBitmapConverter" />
        <DataTemplate x:Key="StandardSampleItemTemplate">
            <Grid x:Name="SampleGrid">
                <Border Margin="2" Background="{StaticResource PrimaryBackgroundColor}">
                    <Grid Width="300" Margin="0,10,0,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200" />
                            <RowDefinition Height="45" />
                        </Grid.RowDefinitions>
                        <Image Width="300"
                               Height="250"
                               HorizontalAlignment="Center"
                               Source="{Binding SampleImageName, Converter={StaticResource SampleToBitmapConverter}}"
                               Stretch="Uniform" />
                        <Button Grid.Row="0"
                                Width="25"
                                Height="25"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="#A52F2F2F"
                                Click="SampleGridFavoriteButton_Click"
                                CommandParameter="{Binding FormalName}"
                                Style="{DynamicResource SampleGridFavoriteButton}">
                            <Path Data="M15.633 6.718l-3.666 3.176 1.107 4.732a.632.632 0 0 1-.221.68.572.572 0 0 1-.34.11.72.72 0 0 1-.373-.111l-4.165-2.533-4.163 2.532a.607.607 0 0 1-.936-.676l1.107-4.734L.317 6.718a.633.633 0 0 1-.22-.68.63.63 0 0 1 .578-.418l4.824-.406 1.9-4.537a.619.619 0 0 1 1.154 0l1.898 4.537 4.824.406a.606.606 0 0 1 .358 1.098z"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" />
                        </Button>
                        <TextBlock Grid.Row="0"
                                   Padding="10"
                                   VerticalAlignment="Bottom"
                                   Background="#A52F2F2F"
                                   FontSize="18"
                                   Foreground="White"
                                   Text="{Binding SampleName}"
                                   TextWrapping="Wrap" />
                        <TextBlock Grid.Row="1"
                                   Margin="5,5,5,5"
                                   VerticalAlignment="Top"
                                   FontSize="13"
                                   FontWeight="Normal"
                                   Style="{StaticResource SecondaryTextBlock}"
                                   Text="{Binding Description}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap" />
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="{StaticResource PrimaryBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" MaxWidth="535" />
            <ColumnDefinition Width="*" MinWidth="450" />
        </Grid.ColumnDefinitions>

        <!--  Header  -->
        <Grid Grid.ColumnSpan="5">
            <Grid.Resources>
                <!--  Remove hover style. See https://stackoverflow.com/a/37589943/4630559  -->
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="Assets/banner-background-purple.png" TileMode="Tile" />
            </Grid.Background>
            <TextBlock Grid.Column="0"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Text="ArcGIS Runtime SDK for .NET (WPF)"
                       TextOptions.TextRenderingMode="Aliased" />
            <controls:SearchTextBox x:Name="SearchFilterBox"
                                    Grid.Column="1"
                                    Margin="5"
                                    Placeholder="Search..."
                                    TextChanged="SearchFilterBox_OnTextChanged" />
            <Button Grid.Column="2"
                    Width="24"
                    Height="24"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="SettingsButton_Click">
                <Image MaxWidth="24"
                       MaxHeight="24"
                       Source="Resources/ic_menu_settings_dark.png" />
            </Button>
        </Grid>

        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="0">
            <!--  Categories treeview  -->
            <TreeView x:Name="Categories"
                      Grid.ColumnSpan="2"
                      Padding="0,10,0,0"
                      Background="#FFF8F8F8"
                      BorderBrush="Transparent"
                      FontSize="18"
                      ItemsSource="{Binding}"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      SelectedItemChanged="categories_SelectedItemChanged"
                      Visibility="Visible" />
        </Grid>

        <!--  Details region  -->
        <Grid x:Name="DetailsRegion"
              Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="1"
              Background="{StaticResource PrimaryBackgroundColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  Secondary navigation  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock x:Name="SampleTitleBlock"
                                   FontSize="24"
                                   FontWeight="SemiBold" />
                        <Button x:Name="SampleFavoriteButton"
                                Grid.Row="0"
                                Width="25"
                                Height="25"
                                Margin="5,5"
                                VerticalAlignment="Center"
                                Background="white"
                                BorderThickness="0"
                                Click="InSampleFavoriteButton_Click"
                                CommandParameter="{Binding FormalName}">
                            <Path Data="M15.633 6.718l-3.666 3.176 1.107 4.732a.632.632 0 0 1-.221.68.572.572 0 0 1-.34.11.72.72 0 0 1-.373-.111l-4.165-2.533-4.163 2.532a.607.607 0 0 1-.936-.676l1.107-4.734L.317 6.718a.633.633 0 0 1-.22-.68.63.63 0 0 1 .578-.418l4.824-.406 1.9-4.537a.619.619 0 0 1 1.154 0l1.898 4.537 4.824.406a.606.606 0 0 1 .358 1.098z"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"
                                  Stroke="Black" />
                        </Button>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="ScreenshotButton"
                                Width="40"
                                Height="30"
                                VerticalAlignment="Center"
                                Background="White"
                                BorderThickness="0"
                                Click="ScreenshotButton_Click">
                            <Path Data="M14.5 8a4.5 4.5 0 1 0 4.5 4.5A4.505 4.505 0 0 0 14.5 8zm0 8a3.5 3.5 0 1 1 3.5-3.5 3.504 3.504 0 0 1-3.5 3.5zM8 9H4V8h4zm13 11H3a2.002 2.002 0 0 1-2-2V8a2.002 2.002 0 0 1 2-2h1V5h4v1h1.5a.5.5 0 0 0 .5-.5A1.502 1.502 0 0 1 11.5 4h6A1.502 1.502 0 0 1 19 5.5a.5.5 0 0 0 .5.5H21a2.002 2.002 0 0 1 2 2v10a2.002 2.002 0 0 1-2 2zM3 7a1.001 1.001 0 0 0-1 1v10a1.001 1.001 0 0 0 1 1h18a1.001 1.001 0 0 0 1-1V8a1.001 1.001 0 0 0-1-1h-1.5A1.502 1.502 0 0 1 18 5.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0-.5.5A1.502 1.502 0 0 1 9.5 7H7V6H5v1z" Stroke="Black" />
                        </Button>
                        <RadioButton x:Name="SampleRadTab"
                                     Margin="5,0,0,0"
                                     Click="LiveSample_Click"
                                     Content="Live sample"
                                     FontSize="24"
                                     GroupName="DetailsTabs"
                                     IsChecked="True"
                                     Style="{DynamicResource SampleHeaderToggleButtonStyle}" />
                        <RadioButton x:Name="DetailsRadTab"
                                     Margin="5,0,0,0"
                                     Background="Transparent"
                                     BorderBrush="{StaticResource PrimaryBackgroundColor}"
                                     Click="Description_Click"
                                     Content="Description"
                                     FontSize="24"
                                     GroupName="DetailsTabs"
                                     Style="{DynamicResource SampleHeaderToggleButtonStyle}" />
                        <RadioButton x:Name="SourceRadTab"
                                     Margin="5,0,0,0"
                                     Background="Transparent"
                                     BorderBrush="{StaticResource PrimaryBackgroundColor}"
                                     Click="SourceCode_Click"
                                     Content="Source code"
                                     FontSize="24"
                                     GroupName="DetailsTabs"
                                     Style="{DynamicResource SampleHeaderToggleButtonStyle}" />
                    </StackPanel>
                </Grid>
                <!--  Details area  -->
                <Grid Grid.Row="1" Background="{StaticResource PrimaryBackgroundColor}">
                    <ContentControl x:Name="SampleContainer" Margin="0" />
                    <local:Description x:Name="DescriptionContainer"
                                       Margin="0"
                                       Visibility="Collapsed" />
                    <local:SourceCode x:Name="SourceCodeContainer"
                                      Margin="0"
                                      Visibility="Collapsed" />
                </Grid>
            </Grid>
        </Grid>

        <!--  Categories region  -->
        <Grid x:Name="CategoriesRegion"
              Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="1"
              Background="{StaticResource PrimaryBackgroundColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="CategoriesHeader"
                           Grid.Row="0"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="24"
                           FontWeight="SemiBold" />
                <!--  Secondary navigation  -->
                <Grid Grid.Row="1" Background="{StaticResource PrimaryBackgroundColor}">
                    <ListView x:Name="CategoriesList"
                              Margin="5,2,2,0"
                              Background="{StaticResource PrimaryBackgroundColor}"
                              BorderBrush="Transparent"
                              ItemTemplate="{StaticResource StandardSampleItemTemplate}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              SelectionChanged="categoriesList_SelectionChanged">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>