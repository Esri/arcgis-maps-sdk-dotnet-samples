<UserControl x:Class="ArcGISRuntime.WPF.Samples.LineOfSightLocation.LineOfSightLocation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:SceneView x:Name="MySceneView"/>
        <Border BorderBrush="Black" Background="White" BorderThickness="1"
                Margin="30" Padding="20" Width="375"
                HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBlock Text="Tap to place the observer. Tap again to place the target."
                       TextAlignment="Center" TextWrapping="Wrap" FontWeight="SemiBold" />
        </Border>
    </Grid>
</UserControl>
