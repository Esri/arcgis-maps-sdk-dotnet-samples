<UserControl x:Class="ArcGISRuntime.WPF.Samples.CreateMobileGeodatabase.CreateMobileGeodatabase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
            <StackPanel>
                <Label x:Name="FeaturesLabel" Content="Number of features added: " />
                <Button Click="ViewTable" Content="View Table" />
                <Button Click="CreateGeodatabase" Content="Create and share mobile geodatabase" />
            </StackPanel>
        </Border>
        <Border x:Name="TableBorder"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource BorderStyle}"
                Visibility="Hidden">
            <Label Content="placeholder" />
        </Border>
    </Grid>
</UserControl>
