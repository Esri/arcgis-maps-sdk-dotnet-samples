<UserControl x:Class="ArcGISRuntime.WPF.Samples.Buffer.Buffer"
             x:Name="_this"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:local="clr-namespace:ArcGISRuntime.WPF.Samples.Buffer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel  Orientation="Horizontal" Grid.Row="0">
            <Label Content="Specify the buffer in miles and the tap on the map:"/>
            <TextBox x:Name="BufferValue_TextBox" Text="10"/>
        </StackPanel>
        <esri:MapView x:Name="MyMapView" Grid.Row="1"/>
    </Grid>
</UserControl>