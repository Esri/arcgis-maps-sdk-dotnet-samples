<UserControl x:Class="ArcGISRuntime.WPF.Samples.BufferWithUnion.BufferWithUnion"
             x:Name="_this"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:local="clr-namespace:ArcGISRuntime.WPF.Samples.BufferWithUnion">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel  Orientation="Horizontal" Grid.Row="0">
            <Button x:Name="Buffer_Button" Content="Make Unioned Buffer" Click="Buffer_Button_Click"/>
        </StackPanel>
        <esri:MapView x:Name="MyMapView" Grid.Row="1"/>
    </Grid>
</UserControl>