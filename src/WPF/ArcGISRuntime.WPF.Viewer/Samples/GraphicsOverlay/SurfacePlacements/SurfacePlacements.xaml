<UserControl
    x:Class="ArcGISRuntime.WPF.Samples.SurfacePlacements.SurfacePlacements"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:SceneView x:Name="MySceneView" />
        <Border Width="250" Style="{StaticResource BorderStyle}">
            <StackPanel>
                <RadioButton
                    x:Name="BillboardButton"
                    Content="Draped billboarded"
                    IsChecked="True" />
                <RadioButton x:Name="FlatButton" Content="Draped flat" />

                <Label Content="Z-Value" />
                <Slider
                    Maximum="140"
                    Minimum="0"
                    ValueChanged="ZValueChanged"
                    Value="70" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

