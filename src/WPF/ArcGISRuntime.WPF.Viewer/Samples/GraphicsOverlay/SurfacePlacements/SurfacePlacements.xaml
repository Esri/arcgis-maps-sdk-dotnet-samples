<UserControl
    x:Class="ArcGISRuntime.WPF.Samples.SurfacePlacements.SurfacePlacements"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:SceneView x:Name="MySceneView" />
        <Border
            Width="175"
            Height="auto"
            Style="{StaticResource BorderStyle}">
            <StackPanel>
                <RadioButton
                    x:Name="BillboardButton"
                    Content="Draped billboarded"
                    IsChecked="True" />
                <RadioButton x:Name="FlatButton" Content="Draped flat" />
                <Label Content="{Binding ElementName=ZSlider, Path=Value}" ContentStringFormat="Z-Value: {0:0} meters" />
                <Slider
                    x:Name="ZSlider"
                    Height="150"
                    Maximum="140"
                    Minimum="0"
                    Orientation="Vertical"
                    ValueChanged="ZValueChanged"
                    Value="70" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

