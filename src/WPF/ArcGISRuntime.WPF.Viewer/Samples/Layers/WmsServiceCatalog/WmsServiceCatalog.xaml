<UserControl
    x:Class="ArcGISRuntime.WPF.Samples.WmsServiceCatalog.WmsServiceCatalog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
    xmlns:wmsServiceCatalog="clr-namespace:ArcGISRuntime.WPF.Samples.WmsServiceCatalog">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="Select WMS sublayers for display."
                           Grid.Row="0" Margin="5"
                           Foreground="Black" FontWeight="Bold" TextAlignment="Center" />
                <TreeView Name="LayerTreeView" Grid.Row="1">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type wmsServiceCatalog:LayerDisplayVM}"
                                                  ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                                          VerticalAlignment="Center" Margin="5"
                                          Checked="ToggleButton_OnChecked"
                                          Unchecked="ToggleButton_OnChecked" />
                                <TextBlock Text="{Binding}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </Border>
    </Grid>
</UserControl>