<UserControl
    x:Class="ArcGISRuntime.WPF.Samples.ApplyScheduledUpdates.ApplyScheduledUpdates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button
                    x:Name="ApplyButton"
                    Grid.Row="0"
                    Click="ApplyButton_Click"
                    Content="Apply scheduled updates"
                    IsEnabled="False" />
                <Label
                    x:Name="InfoLabel"
                    Grid.Row="1"
                    Content="" />
            </Grid>

        </Border>
    </Grid>
</UserControl>
