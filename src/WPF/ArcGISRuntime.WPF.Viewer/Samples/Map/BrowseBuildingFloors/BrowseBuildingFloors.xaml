<UserControl x:Class="ArcGISRuntime.WPF.Samples.BrowseBuildingFloors.BrowseBuildingFloors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:MapView x:Name="MyMapView"/>
        <Border Style="{StaticResource BorderStyle}" Margin="0,30,30,0" Width="144">
            <StackPanel>
                <TextBlock Text="Select floor"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"
                           TextWrapping="Wrap" />
                <ComboBox x:Name="FloorChooser"
                          SelectionChanged="OnFloorChooserSelectionChanged" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
