<UserControl
    x:Class="ArcGISRuntime.WPF.Samples.AnimateImageOverlay.AnimateImageOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:SceneView x:Name="MySceneView" />
        <Border Width="260" Style="{StaticResource BorderStyle}">
            <StackPanel Width="250">
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <Label
                        Margin="5"
                        HorizontalAlignment="Right"
                        Content="Opacity:" />
                    <Slider
                        Width="150"
                        VerticalAlignment="Center"
                        Maximum="1"
                        Minimum="0"
                        ValueChanged="ChangeOpacity"
                        Value="1" />
                </StackPanel>
                <StackPanel
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal">
                    <Button
                        Margin="5"
                        Padding="5"
                        Click="StartStopAnimation"
                        Content="Stop" />
                    <Label VerticalAlignment="Center" Content="Speed:" />
                    <ComboBox
                        Name="SpeedComboBox"
                        Width="75"
                        Height="25"
                        SelectionChanged="SpeedSelected" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
