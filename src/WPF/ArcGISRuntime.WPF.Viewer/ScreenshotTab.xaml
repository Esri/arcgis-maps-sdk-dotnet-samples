<UserControl x:Class="ArcGISRuntime.ScreenshotTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="500"
             Height="220">
    <StackPanel Orientation="Vertical">
        <CheckBox x:Name="ScreenshotEnabledCheckBox"
                  Margin="3"
                  Content="Screenshot tool enabled" />
        <StackPanel Orientation="Horizontal">
            <Label Content="Source path:" />
            <TextBox x:Name="SourcePathText"
                     Width="375"
                     Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Width" />
            <TextBox x:Name="WidthEntryBox"
                     Width="40"
                     Margin="5"
                     HorizontalAlignment="Left"
                     HorizontalScrollBarVisibility="Auto" />
            <Label Content="Height" />
            <TextBox x:Name="HeightEntryBox"
                     Width="40"
                     Margin="5"
                     HorizontalAlignment="Left"
                     HorizontalScrollBarVisibility="Auto" />
        </StackPanel>
    </StackPanel>
</UserControl>
