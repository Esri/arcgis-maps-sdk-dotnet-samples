<Window x:Class="ArcGIS.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterOwner">

    <StackPanel x:Name="SubmitFeedback" HorizontalAlignment="Center">
        <TextBlock Margin="10"
                   FontSize="25"
                   FontWeight="Bold"
                   Text="Open an issue on GitHub:" />
        <Button Margin="10"
                Click="BugReportButton_Click"
                Content="Bug Report" />
        <Button Margin="10"
                Click="FeatureRequestButton_Click"
                Content="Feature Request" />
    </StackPanel>

</Window>