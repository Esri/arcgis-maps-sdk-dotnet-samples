<UserControl x:Class="ArcGIS.WPF.Samples.CreateKmlMultiTrack.CreateKmlMultiTrack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <UserControl.Resources>
        <Style x:Key="IconStyle" TargetType="Button" BasedOn="{StaticResource CalciteButtonBaseStyle}">
            <Style.Setters>
                <Setter Property="FontFamily" Value="{DynamicResource CalciteUIIconsMediumFontFamily}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Margin" Value="0,5,0,5" />
            </Style.Setters>
        </Style>
        <Style TargetType="ToolTip" BasedOn="{StaticResource CalciteToolTipStyle}">
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
            <StackPanel>
                <StackPanel x:Name="RecordingUI">
                    <TextBlock x:Name="ElementsCountTextBox" Text="Click record to capture KML track elements." />
                    <TextBlock x:Name="TracksCountTextBlock" Text="Number of tracks in MultiTrack: 0" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="RecenterButton"
                                Click="RecenterButton_Click"
                                IsEnabled="False"
                                Style="{StaticResource IconStyle}"
                                ToolTip="Recenter"
                                Content="{DynamicResource CalciteUIIcons_Glyph_GpsOn}"/>
                        <Button x:Name="RecordTrackButton"
                                Grid.Column="1"
                                Margin="5"
                                Click="RecordTrackButton_Click"
                                Style="{DynamicResource CalciteSecondaryButtonStyle}"
                                Content="Record Track"/>
                        <Button x:Name="SaveButton"
                                Grid.Column="2"
                                Click="SaveButton_Click"
                                IsEnabled="False"
                                Style="{StaticResource IconStyle}"
                                ToolTip="Save"
                                Content="{DynamicResource CalciteUIIcons_Glyph_Save}"/>
                    </Grid>
                </StackPanel>
                <StackPanel x:Name="ViewingUI" Visibility="Collapsed">
                    <TextBlock Text="Displaying contents of saved HikingTracks.kmz file." />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="TracksComboBox"
                                  Margin="5"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  DisplayMemberPath="Key"
                                  SelectionChanged="TracksComboBox_SelectionChanged" />
                        <Button Grid.Column="1"
                                Click="ResetButton_Click"
                                Style="{StaticResource IconStyle}"
                                ToolTip="Reset"
                                Content="{DynamicResource CalciteUIIcons_Glyph_Reset}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>