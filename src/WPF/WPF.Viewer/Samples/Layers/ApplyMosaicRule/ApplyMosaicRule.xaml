<UserControl x:Class="ArcGIS.WPF.Samples.ApplyMosaicRule.ApplyMosaicRule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <Border HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Style="{StaticResource BorderStyle}">
            <StackPanel>
                <Label Content="Choose a mosaic rule to apply to the image service." />
                <ComboBox x:Name="MosaicRulesBox" SelectionChanged="MosaicRulesBox_SelectionChanged" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>