<UserControl x:Class="ArcGIS.WPF.Samples.ArcGISVectorTiledLayerUrl.ArcGISVectorTiledLayerUrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock Margin="5"
                           Text="Select a vector layer."
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <ComboBox x:Name="VectorLayersChooser"
                          Margin="5"
                          SelectionChanged="OnVectorLayersChooserSelectionChanged" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>