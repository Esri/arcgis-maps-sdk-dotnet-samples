<UserControl x:Class="ArcGIS.WPF.Samples.RasterRenderingRule.RasterRenderingRule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock Margin="0,0,0,5"
                           Text="Select a rendering rule."
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <ComboBox x:Name="RenderingRuleChooser" SelectionChanged="comboBox_RenderingRuleChooser_SelectionChanged" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>