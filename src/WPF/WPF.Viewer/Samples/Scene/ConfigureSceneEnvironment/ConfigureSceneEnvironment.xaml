<UserControl
    x:Class="ArcGIS.WPF.Samples.ConfigureSceneEnvironment.ConfigureSceneEnvironment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:LocalSceneView x:Name="MySceneView" />
        <Border Width="250" Style="{StaticResource BorderStyle}">
            <StackPanel>
                <!--  Sky settings  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Sky" />
                <StackPanel Orientation="Horizontal">
                    <CheckBox
                        x:Name="StarsCheckBox"
                        Margin="0,0,15,0"
                        Content="Stars" />
                    <CheckBox
                        x:Name="AtmosphereCheckBox"
                        Content="Atmosphere" />
                </StackPanel>
                <Separator Margin="0,8" />

                <!--  Background color settings  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Background color" />
                <ComboBox x:Name="BackgroundColorComboBox" />
                <Separator Margin="0,8" />

                <!--  Lighting settings  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Lighting" />
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <RadioButton
                        x:Name="SunRadioButton"
                        Margin="0,0,15,0"
                        Content="Sun"
                        GroupName="LightingType" />
                    <RadioButton
                        x:Name="VirtualRadioButton"
                        Content="Virtual"
                        GroupName="LightingType" />
                </StackPanel>
                <CheckBox
                    x:Name="ShadowsCheckBox"
                    Margin="0,0,0,5"
                    Content="Direct Shadows" />
                <DockPanel>
                    <TextBlock
                        x:Name="HourLabel"
                        MinWidth="75"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Text="Hour: 12:00" />
                    <Slider
                        x:Name="HourSlider"
                        IsSnapToTickEnabled="True"
                        Maximum="23"
                        Minimum="0"
                        TickFrequency="1" />
                </DockPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>