<UserControl 
    x:Class="ArcGIS.WinUI.Samples.ManageFeatures.ManageFeatures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="using:Esri.ArcGISRuntime"
    xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
  <Grid>
        <esriUI:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
      <StackPanel>
        <TextBox Text="Select an option." />
        <ComboBox x:Name="MethodPicker"
                  IsEditable="False"
                  IsEnabled="True"
                  SelectionChanged="OnComboBoxSelectionChanged" />
        <TextBox x:Name="InstructionLabel"
                 Text="Select an option to show instructions."
                 FontWeight="SemiBold" />
        <ComboBox x:Name="DamageTypeDropDown"
                  IsEditable="False"
                  IsEnabled="False" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>