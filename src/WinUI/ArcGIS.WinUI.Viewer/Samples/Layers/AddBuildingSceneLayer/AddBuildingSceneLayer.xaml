<UserControl x:Class="ArcGIS.WinUI.Samples.AddBuildingSceneLayer.AddBuildingSceneLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriUI:LocalSceneView x:Name="MySceneView" />
        <Border Width="180" Style="{StaticResource BorderStyle}">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Text="Show full model:" />
                <CheckBox x:Name="FullModelCheckBox"
                          VerticalAlignment="Center"
                          IsChecked="False"
                          IsEnabled="False" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>