<UserControl x:Class="ArcGIS.WinUI.Samples.ApplyRenderersToSceneLayer.ApplyRenderersToSceneLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="using:Esri.ArcGISRuntime"
             xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriUI:SceneView x:Name="MySceneView" />

        <Border MaxWidth="375" Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock Margin="0,0,0,5"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Text="Select renderer:"
                           TextWrapping="Wrap" />
                <ComboBox x:Name="RendererCombo" SelectionChanged="RendererCombo_SelectionChanged" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>