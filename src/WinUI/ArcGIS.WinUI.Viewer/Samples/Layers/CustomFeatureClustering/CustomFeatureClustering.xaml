<UserControl x:Class="ArcGIS.WinUI.Samples.CustomFeatureClustering.CustomFeatureClustering"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esriTK="using:Esri.ArcGISRuntime.Toolkit.UI.Controls"
             xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriUI:MapView x:Name="MyMapView" />
        <Border Width="auto" Style="{StaticResource BorderStyle}">
            <StackPanel Orientation="Vertical">
                <Button x:Name="DrawClustersButton"
                        Click="DrawClustersButton_Click"
                        Content="Draw clusters" />
                <StackPanel x:Name="CustomFeatureClusteringOptions"
                            Orientation="Vertical"
                            Visibility="Collapsed">
                    <TextBlock Margin="0,0,0,10"
                               FontSize="16"
                               FontWeight="Bold"
                               Text="Clustering properties" />
                    <Grid Grid.RowDefinitions="auto,auto,auto,auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="Display Labels" />
                        <CheckBox x:Name="DisplayLabelsCheckBox"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  VerticalAlignment="Center"
                                  Checked="DisplayLabelsCheckBox_CheckedChanged"
                                  IsChecked="false" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   VerticalAlignment="Center">
                            <Run Text="Cluster radius: " />
                            <Run Text="{Binding ElementName=ClusterRadiusSlider, Path=Value, Mode=OneWay}" />
                        </TextBlock>
                        <Slider x:Name="ClusterRadiusSlider"
                                Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Maximum="85"
                                Minimum="30"
                                ValueChanged="UpdateClusteringProperties" />
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   VerticalAlignment="Center">
                            <Run Text="MaxScale: " />
                            <Run Text="{Binding ElementName=MaxScaleSlider, Path=Value, Mode=OneWay}" />
                        </TextBlock>
                        <Slider x:Name="MaxScaleSlider"
                                Grid.Row="2"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Maximum="150000"
                                Minimum="0"
                                ValueChanged="UpdateClusteringProperties" />
                        <TextBlock Grid.Row="3"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   VerticalAlignment="Center">
                            <Run Text="Current map scale: " />
                            <Run Text="1:" />
                            <Run Text="{Binding ElementName=MyMapView, Path=MapScale, Mode=OneWay}" />
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>
        <Grid x:Name="PopupBackground"
              Background="#AA333333"
              Visibility="Collapsed">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                <esriTK:PopupViewer x:Name="PopupViewer"
                                    MaxWidth="400"
                                    MaxHeight="400"
                                    Margin="5"
                                    Padding="5" />
            </Border>
        </Grid>
    </Grid>
</UserControl>