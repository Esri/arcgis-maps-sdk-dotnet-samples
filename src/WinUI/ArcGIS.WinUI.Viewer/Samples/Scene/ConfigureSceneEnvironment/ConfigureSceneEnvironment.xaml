<UserControl
    x:Class="ArcGIS.WinUI.Samples.ConfigureSceneEnvironment.ConfigureSceneEnvironment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriUI:LocalSceneView x:Name="MySceneView" />
        <Border Width="300" Style="{StaticResource BorderStyle}">
            <StackPanel>
                <!--  Sky settings  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Sky" />
                <StackPanel Orientation="Horizontal">
                    <CheckBox
                        x:Name="StarsCheckBox"
                        Margin="0,0,15,0"
                        Content="Stars" />
                    <CheckBox x:Name="AtmosphereCheckBox" Content="Atmosphere" />
                </StackPanel>
                <Border
                    Margin="0,8"
                    BorderBrush="Gray"
                    BorderThickness="0,0,0,1" />

                <!--  Background color settings  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Background color" />
                <ComboBox x:Name="BackgroundColorComboBox" HorizontalAlignment="Stretch" />
                <Border
                    Margin="0,8"
                    BorderBrush="Gray"
                    BorderThickness="0,0,0,1" />

                <!--  Lighting settings  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Lighting" />
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <RadioButton
                        x:Name="SunRadioButton"
                        Margin="0,0,15,0"
                        Content="Sun"
                        GroupName="LightingType" />
                    <RadioButton
                        x:Name="VirtualRadioButton"
                        Content="Virtual"
                        GroupName="LightingType" />
                </StackPanel>
                <CheckBox
                    x:Name="ShadowsCheckBox"
                    Margin="0,0,0,5"
                    Content="Direct Shadows" />
                <Grid ColumnDefinitions="Auto,*">
                    <TextBlock
                        x:Name="HourLabel"
                        MinWidth="75"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="Hour: 12:00" />
                    <Slider
                        x:Name="HourSlider"
                        Grid.Column="1"
                        Maximum="23"
                        Minimum="0"
                        SnapsTo="StepValues"
                        StepFrequency="1" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>