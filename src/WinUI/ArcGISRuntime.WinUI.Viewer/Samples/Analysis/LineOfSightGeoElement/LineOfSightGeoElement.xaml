<UserControl x:Class="ArcGISRuntime.WinUI.Samples.LineOfSightGeoElement.LineOfSightGeoElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriUI:SceneView x:Name="MySceneView" />
        <Border Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock FontWeight="SemiBold"
                           Text="Use the slider to change the observer's altitude."
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock x:Name="StatusLabel"
                           Margin="0,10,0,5"
                           Foreground="MidnightBlue"
                           Text="Status: "
                           TextAlignment="Center" />
                <Slider Margin="0,0,0,-10"
                        HorizontalAlignment="Stretch"
                        ValueChanged="HeightSlider_ValueChanged" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>