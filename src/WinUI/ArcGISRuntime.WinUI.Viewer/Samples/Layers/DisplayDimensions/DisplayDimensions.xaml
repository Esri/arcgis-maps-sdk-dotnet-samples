<UserControl
    x:Class="ArcGISRuntime.WinUI.Samples.DisplayDimensions.DisplayDimensions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriUI:MapView x:Name="MyMapView"/>
        <Border Style="{StaticResource BorderStyle}" MaxWidth="240">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock 
                    x:Name="PylonLabel"
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,5"/>
                <CheckBox
                    x:Name="DimensionLayerCheckBox"
                    Grid.Column="0"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Checked="DimensionLayerCheckBoxChanged"
                    IsChecked="True"
                    IsEnabled="False"
                    Unchecked="DimensionLayerCheckBoxChanged">
                    <TextBlock
                        x:Name="DimensionLayerLabel"
                        Grid.Column="1"
                        Grid.Row="1"
                        Padding="0,0,0,5"
                        Text="Dimension Layer visibility"/>
                </CheckBox>
                <CheckBox
                    x:Name="DefinitionExpressionCheckBox"
                    Grid.Column="0"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Checked="DefinitionExpressionCheckBoxChanged"
                    IsChecked="False"
                    IsEnabled="False"
                    Unchecked="DefinitionExpressionCheckBoxChanged">
                    <TextBlock
                        x:Name="DefinitionExpressionLabel"
                        Grid.Column="1"
                        Grid.Row="2"
                        VerticalAlignment="Center"
                        Text="Definition Expression: &#x0a;Dimensions >= 450m"/>
                </CheckBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>

