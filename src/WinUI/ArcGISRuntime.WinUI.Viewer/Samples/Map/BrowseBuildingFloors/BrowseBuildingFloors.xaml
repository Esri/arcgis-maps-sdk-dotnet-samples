<UserControl x:Class="ArcGISRuntime.WinUI.Samples.BrowseBuildingFloors.BrowseBuildingFloors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="using:Esri.ArcGISRuntime"
             xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriUI:MapView x:Name="MyMapView" />
        <Border Width="150" Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock Margin="0,0,0,5"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Text="Select floor"
                           TextWrapping="Wrap" />
                <ComboBox x:Name="FloorChooser"
                          HorizontalAlignment="Center"
                          DisplayMemberPath="ShortName"
                          SelectionChanged="OnFloorChooserSelectionChanged" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>