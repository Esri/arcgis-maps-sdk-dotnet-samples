<UserControl
    x:Class="ArcGISRuntime.WinUI.Samples.BrowseBuildingFloors.BrowseBuildingFloors"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esri="using:Esri.ArcGISRuntime"
    xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <esriUI:MapView x:Name="MyMapView" />
        <Border Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock Text="Select floor"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"
                           TextWrapping="Wrap" />
                <ComboBox x:Name="FloorChooser"
                          SelectionChanged="OnFloorChooserSelectionChanged"
                          DisplayMemberPath="ShortName" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>