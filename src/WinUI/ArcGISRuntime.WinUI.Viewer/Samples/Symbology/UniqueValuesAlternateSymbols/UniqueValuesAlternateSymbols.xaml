<UserControl x:Class="ArcGISRuntime.WinUI.Samples.UniqueValuesAlternateSymbols.UniqueValuesAlternateSymbols"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ArcGISRuntime.WinUI.Samples.UniqueValuesAlternateSymbols"
             xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <UserControl.Resources>
        <ResourceDictionary>
            <local:ScaleToTextConverter x:Key="ScaleToText" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <esriUI:MapView x:Name="MyMapView" />
        <Border Width="auto"
                Height="auto"
                Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock Margin="5" Text="{Binding ElementName=MyMapView, Path=MapScale, Converter={StaticResource ScaleToText}}" />
                <Button Margin="5"
                        Padding="5"
                        Click="ResetViewpointClick"
                        Content="Reset viewpoint" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>