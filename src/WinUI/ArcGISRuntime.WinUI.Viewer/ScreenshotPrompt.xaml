<UserControl x:Class="ArcGISRuntime.ScreenshotPrompt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">
    <StackPanel Orientation="Vertical">
        <CheckBox x:Name="ScreenshotEnabledCheckBox"
                  Margin="3"
                  Content="Screenshot tool enabled" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5"
                       VerticalAlignment="Center"
                       Text="Source path:" />
            <TextBox x:Name="SourcePathText"
                     Width="450"
                     Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5"
                       VerticalAlignment="Center"
                       Text="Width" />
            <TextBox x:Name="WidthEntryBox"
                     Width="40"
                     Margin="5"
                     HorizontalAlignment="Left"
                     BeforeTextChanging="IntegerInput_BeforeTextChanging" />
            <TextBlock Margin="5"
                       VerticalAlignment="Center"
                       Text="Height" />
            <TextBox x:Name="HeightEntryBox"
                     Width="40"
                     Margin="5"
                     HorizontalAlignment="Left"
                     BeforeTextChanging="IntegerInput_BeforeTextChanging" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5"
                       VerticalAlignment="Center"
                       Text="Scale Factor" />
            <TextBox x:Name="ScaleFactorEntryBox"
                     Width="40"
                     Margin="5"
                     HorizontalAlignment="Left"
                     BeforeTextChanging="DoubleInput_BeforeTextChanging" />
        </StackPanel>
        <Button Width="80"
                Margin="5"
                HorizontalAlignment="Left"
                Click="SaveButton_Click"
                Content="Save" />
        <TextBlock x:Name="Status" Margin="5,0,0,0" />
    </StackPanel>
</UserControl>
